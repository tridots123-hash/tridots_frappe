import frappe
from frappe.model.document import Document

class CustomNewsArticle(Document):
    def validate(self):
        if not self.title:
            frappe.throw("Title is required!")

        if not self.status:
            self.status = "Draft"


override_doctype_class = {
    "News Article": "custom_app.overrides.news_article.CustomNewsArticle"
}


