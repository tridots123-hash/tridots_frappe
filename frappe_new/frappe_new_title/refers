def get_data(filters):
    condition = ""
    if filters.get("class"):
        condition += "AND class = %(class)s"

    return frappe.db.sql("""
        SELECT
            name, age, class, joining_date
        FROM
            `tabStudent`
        WHERE
            1=1 {condition}
        ORDER BY
            joining_date DESC
    """.format(condition=condition), filters, as_dict=1)


